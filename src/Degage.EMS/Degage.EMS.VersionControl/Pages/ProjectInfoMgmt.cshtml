@page
@model Degage.EMS.VersionControl.Pages.ProjectInfoMgmtModel
@{
}

<div id="app" style="display:flex;flex-flow:row;flex:1;">
    <div style="display:flex;flex-flow:row;flex:1;">
        <div style="display:flex;flex-flow:column;width:320px;height:100%;margin-left:15px;margin-top:15px;text-align:center;">
            <el-form ref="form" :model="projectInfo" label-width="40px" style="width:300px;">
                <el-form-item label="标题">
                    <el-input v-model="projectInfo.@nameof(ProjectInfo.Title)"></el-input>
                </el-form-item>
                <el-form-item label="描述">
                    <el-input type="textarea" rows="10" v-model="projectInfo.@nameof(ProjectInfo.Description)"></el-input>
                </el-form-item>
                <el-form-item style="float:left;" label="图标">
                    <el-upload class="avatar-uploader"
                               action="/file/upload"
                               :show-file-list="false"
                               :on-success="handleIconSuccess"
                               :before-upload="beforeIconUpload">
                        <img v-if="iconUrl" :src="iconUrl" class="avatar">
                        <i v-else class="el-icon-plus avatar-uploader-icon"></i>
                    </el-upload>
                </el-form-item>
            </el-form>
            <div>
                <div style="float:left;margin-left:10px;">
                    <el-button type="primary" v-on:click="projectAlterHandle">修 改</el-button>
                </div>
            </div>
        </div>
        <el-table ref="singleTable"
                  :data="tableData"
                  highlight-current-row
                  v-on:current-change="handleCurrentChange"
                  style="height:100%;flex:1;margin-left:20px;">
            <el-table-column type="index"
                             width="50">
            </el-table-column>
            <el-table-column property="date"
                             label="日期"
                             width="120">
            </el-table-column>
            <el-table-column property="name"
                             label="姓名"
                             width="120">
            </el-table-column>
            <el-table-column property="address"
                             label="地址">
            </el-table-column>
        </el-table>
    </div>
</div>

@section Scripts
{
<script>
    let p_projectId='@this.Model.ProjectId';
</script>
<script src="~/scripts/page/project-info-mgmt.js"></script>
}


@section Contents
{
<style>
    .avatar-uploader .el-upload {
        border: 1px dashed #d9d9d9;
        border-radius: 6px;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

        .avatar-uploader .el-upload:hover {
            border-color: #409EFF;
        }

    .avatar-uploader-icon {
        font-size: 28px;
        color: #8c939d;
        width: 100px;
        height: 100px;
        line-height: 100px;
        text-align: center;
    }

    .avatar {
        width: 100px;
        height: 100px;
        display: block;
    }
</style>

}

